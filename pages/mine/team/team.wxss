/* pages/mine/team/team.wxss */

.title {
  font-size: 30rpx;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  background-color: #fff;
}

.teamClass {
  min-height: 100rpx;
  background-color: #fff;
}

.teamClass_item {
  font-size: 22rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #ec4141;
  color: #fff;
  border-radius: 10rpx;
}

.newTeamName {
  background-color: #666;
}

.team_item {
  height: 120rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  overflow: hidden;
  padding: 10rpx;
}

.team_item_l {
  float: left;
  width: 20%;
  height: 100%;
}

.team_item_l image {
  width: 80rpx;
  height: 80rpx;
  margin-left: 50rpx;
  margin-top: 20rpx;
}

.team_item_r {
  float: left;
  width: 80%;
  height: 100%;
}

.team_item_r_t {
  font-size: 26rpx;
  padding-top: 15rpx;
  position: relative;
}

.team_item_r_t image {
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  width: 30rpx;
  height: 30rpx;
}

.team_item_r_b {
  font-size: 26rpx;
  color: #666;
  position: relative;
  margin-top: 20rpx;
}

.team_item_r_b .call {
  position: absolute;
  top: 0rpx;
  right: 30rpx;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #ec4141;
  font-size: 22rpx;
  text-align: center;
  border: 1rpx solid #ec4141;
  border-radius: 10rpx;
}

.newTeam {
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  z-index: 1001;
}

.teamTitle {
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.teamInput {
  height: 80rpx;
}

.teamInput input {
  background-color: #fff;
  width: 80%;
  height: 100%;
  margin: 0 auto;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding-left: 20rpx;
}

.team_btn {
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  text-align: center;
}

.team_btn button {
  display: inline-block;
  width: 200rpx;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
}

.btn_red {
  background-color: #ec4141;
  color: #fff;
}

.btn_l {
  position: absolute;
  left: 10%;
}

.btn_r {
  position: absolute;
  right: 10%;
}

.tip {
  color: orange;
  margin-left: 10rpx;
}

.nocontent{
  padding-left: 30rpx;
}