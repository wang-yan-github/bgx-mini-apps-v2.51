/* pages/AmyTest/searchList/index.wxss */
/* 隐藏滚动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

page {
  font-size: 26rpx;
}
/*上三角*/
.triangle-up {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #555555;
}
.triangle-up1 {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-bottom: 6rpx solid #555555;
  display: inline-block;
  position: relative;
  top: -11rpx;
  left: 8rpx;
}
.triangle-up1-active {
  border-bottom-color: red;
}
.triangle-down1 {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-top: 6rpx solid #666666;
  display: inline-block;
  position: relative;
  top: 1rpx;
  left: -1rpx;
}
/*向下三角*/
.triangle-down {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #666666;
  display: inline-block;
  position: relative;
  top: -3rpx;
  left: 8rpx;
}
.triangle-down-active {
  border-top-color: red;
}
.page_bar {
  width: 100%;
  background-color: #ffffff;
  height: 100rpx;
  position: relative;
}
.topItem {
  width: 25%;
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
  float: left;
  overflow: hidden;
}
.topItem_active {
  color: red;
}
.t_name {
  display: inline-block;
}


/* 产品列表 */
.prod_item {
  margin-top: 12rpx;
  padding: 30rpx;
  background-color: #ffffff;
  /* border: salmon 1rpx solid; */
  border-radius: 12rpx;
  position: relative;
}
.prod_item:first-child {
  margin-top: 0;
  border-top: 1rpx solid #dddddd;
}
.item_left {
  line-height: 50rpx;
}
.item_left text {
  font-size: 28rpx;
}
.status {
  padding: 0 20rpx;
  line-height: 42rpx;
  border-radius: 5rpx;
  position: absolute;
  right: 30rpx;
  top: 88rpx;
  border: 1rpx solid #ff6600;
  color: #ff6600;
}
/*品名弹出层*/
.pm_modal_mask {
  width: 100%;
  /* height: 1150rpx; */
  position: absolute;
  left: 0rpx;
  top: 100rpx;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 10;
}
.pm_modal {
  font-size: 26rpx;
  height: 500rpx;
  width: 100%;
  background-color: #ffffff;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: 999;
}
.scroll-view_H {
  height: 414rpx;
  box-sizing: border-box;
}
.scroll-view_H1 {
  border-right: 1rpx solid #eeeeee;
}
.scroll-view{
  float: left;
}
.pm_left {
  width: 100%;
  box-sizing: border-box;
}
.pm_right {
  width: 100%;
  box-sizing: border-box;
}
.pm_item {
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.pm_left_item {
  width: 100%;
  overflow: hidden;
  border-bottom: 1rpx solid #eeeeee;
  line-height: 68rpx;
}
.pm_btns {
  clear: both;
  width: 100%;
  height: 86rpx;
  border-top: 1rpx solid #aaaaaa;
}
.pm_btn {
  width: 50%;
  float: left;
  line-height: 86rpx;
  font-size: 30rpx;
  text-align: center;
}
.pm_btn1 {
  color: #666666;
}
.pm_btn2 {
  color: #ffffff;
  background-color: red;
}
.color_red {
  color: red;
}

/* 筛选框 */
.filter_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  right: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}
.filter_view {
  width: 75%;
  height: 100%;
  position: absolute;
  right: 0;
  background-color: #ffffff;
}

/* 底层content控制 */
.bodyLock{
    top:0px;
    left: 0px;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: fixed;
    z-index: 0;
}

.color_green {
  color:  #29a329;
  border-color:  #29a329;
}