  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0rpx;
  top: 27rpx;
}
.evaluate_item {
  border-top: 1rpx solid #dddddd;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}
.item_info {
  height: 100rpx;
  position: relative;
}
.item_face {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  position: absolute;
  left: 0rpx;
  top: 10rpx;
}
.item_text {
  position: absolute;
  left: 90rpx;
  width: 600rpx;
  line-height: 100rpx;
}
.item_score, .item_level {
  margin-left: 15rpx;
}
.item_score {
  margin-left: 15rpx;
  color: #FA8300;
}
.item_level {
  margin-left: 15rpx;
  color: #ff3333;
}
.item_time {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  color: #666666;
}

.item_content {
  margin-top: 10rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;    
  overflow: hidden;
}

/* 设备详情 */
.detail {
