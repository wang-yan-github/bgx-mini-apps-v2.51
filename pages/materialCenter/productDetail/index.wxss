  overflow: hidden;
}
.evaluate_title {
  line-height: 80rpx;
  height: 80rpx;
  position: relative;
}
.red_line {
  width: 0;
  height: 26rpx;
  border-left: 5rpx solid red;
  position: absolute;
  left: 0;
  top: 28rpx;
}
.evaluate_title1 {
  position: absolute;
  left: 15rpx;
  font-size: 30rpx;
}
.evaluate_more {
  width: 130rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  right: 0rpx;
}
.evaluate_title2 {
  position: absolute;
  left: 0rpx;
}
