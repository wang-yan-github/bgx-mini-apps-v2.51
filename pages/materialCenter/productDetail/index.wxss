  border-top: 1rpx solid #dddddd;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}
.pindan_info {
  height: 100rpx;
  position: relative;
}
.item_p_text {
  position: absolute;
  left: 90rpx;
  width: 600rpx;
  line-height: 100rpx;
} 
.item_comp {
  display: inline-block;
  max-width: 260rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}
