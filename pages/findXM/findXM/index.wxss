.xmName {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  padding: 0 30rpx;
  position: relative;
  color: #000;
}

.xmItem {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #444;
  padding: 0 30rpx;
}

.xmItem image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
  position: relative;
  top: 5rpx;
  background-color: #eee;
}

.xmlist {
  padding: 20rpx 0 10rpx;
  /* border-radius: 10rpx; */
  background-color: #fff;
  margin-bottom: 20rpx;
}

.quyu .qy {
  width: 49%;
}

.yirenzheng {
  margin-left: 30rpx;
  font-size: 20rpx;
  height: 25rpx;
  line-height: 25rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  position: absolute;
  right: 30rpx;
  top: 15rpx;
  color: #52c41a;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.weirenzheng {
  margin-left: 30rpx;
  font-size: 20rpx;
  height: 25rpx;
  line-height: 25rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  position: absolute;
  right: 30rpx;
  top: 15rpx;
  color: #fa8c16;
  background-color: #fff7e6;
  border: 1rpx solid #ffd591;
}

.labelSwap {
  margin: 10rpx 0 10rpx 30rpx;
}

.xmLabel {
  background-color:#ccc;
  padding: 5rpx 10rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #fff;
  border-radius: 5rpx;
}
.xmLabel1{
  background-color: #52c41a;
}
.xmLabel2{
  background-color: #fa8c16;
}
.xmLabel3{
  background-color: #444;
}
.xmLabel4{
  background-color: #ffd591;
  color: #000;
}

.comp {
  color: #888;
  border-top: 1rpx solid #eee;
  font-size: 28rpx;
}

.time_ {
  text-align: right;
  float: right;
}

.gcClass_ {
  display: block;
  width: 120rpx;
  height: 50rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  border: 1rpx solid #eee;
  color: #000;
  text-align: center;
  position: absolute;
  top: 0;
  right: 0rpx;
  border-radius: 50rpx 0 0 50rpx;
}

/* 底层content控制 */
.bodyLock {
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
}
