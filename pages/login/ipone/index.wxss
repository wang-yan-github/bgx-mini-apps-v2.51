.page_bd {
  width: 100%;
  height: 400rpx;
  margin-top: 150rpx;
  padding-left: 45rpx;
  padding-right: 45rpx;
  position: relative;
}

input.phone {
  width: 635rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ddd;
  /* border-radius: 60rpx; */
  padding-left: 25rpx;
  margin-top: 30rpx;
  font-size: 32rpx;
}

input.phone::-webkit-input-placeholder {
  color: #fff;
}

input.phone:-moz-input-placeholder {
  color: #fff;
}

input.phone::-moz-input-placeholder {
  color: #fff;
}

input.phone:-ms-input-placeholder {
  color: #fff;
}

.yanzhengma {
  width: 635rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ddd;
  /* border-radius: 60rpx; */
  padding-left: 25rpx;
  margin-top: 30rpx;
  position: relative;
  font-size: 32rpx;
}

.auth_code_input {
  height: 100rpx;
  line-height: 100rpx;
  width: 60%;
  display: inline-block;
}

.auth_code {
  float: right;
  padding-right: 25rpx;
  line-height: 100rpx;
  color: #ec4141;
}

.login_btn {
  width: 660rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  margin-top: 80rpx;
  border-radius: 60rpx;
  color: #fff;
  background: -webkit-linear-gradient(right, #ff3d58, #eb404c); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff3d58, #eb404c); /* Opera 11.1 - 12.0 */
