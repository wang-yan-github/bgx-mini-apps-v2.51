#swiper-tab {
  width: 100%;
  position: relative;
  z-index: 1001;
  top: -1rpx;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
  /* border-bottom: 1rpx solid #ccc; */
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #666;
  border-bottom: 0rpx;
  position: relative;
}

.swiper-tab-list i {
  position: absolute;
  bottom: 30%;
  right: 14%;
  width: 0px;
  height: 0px;
  border: 5px solid #4e4e4e;
  border-top-color: #4e4e4e;
  border-bottom-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
}

.on {
  color: #f63;
}

.on i {
  border: 5px solid #f63;
  border-top-color: #f63;
  border-bottom-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.swiper-item {
  background: #fff;
  width: 100%;
  height: 565rpx;
  display: none;
  position: absolute;
  top: 85rpx;
  z-index: 333333;
  left: 0;
  animation: displays 1s;
  border-top: 1rpx solid #ededed;
}

@keyframes displays {
  from {
    height: 0px;
  }

  to {
    height: 565rpx;
  }
}

.swiper-beijing {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  position: absolute;
  top: 130px;
  left: 0;
  display: none;
  z-index: 888;
  animation: 1s;
}

/* 下拉切换中的切换 */

.nav {
  width: 50%;
  height: 70rpx;
  float: left;
  flex-direction: row;
}

.default {
  width: 100%;
  line-height: 70rpx;
  text-align: center;
  border-bottom: 1rpx solid #ebebeb;
  border-left: 1rpx solid #ebebeb;
  border-right: 1rpx solid #ebebeb;
  color: #000;
  font-size: 28rpx;
  overflow: hidden;
}

.show {
  display: block;
  text-align: center;
  line-height: 200rpx;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}

#rights {
  width: 50%;
  float: right;
  font-size: 15px;
  max-height: 565rpx;
  overflow-y: auto;
  overflow-x: hidden;
}

/*添加class改变样式  */

.location_bottom {
  line-height: 140rpx;
  color: #d91f16;
  font-size: 28rpx;
  align-items: center;
  height: 565rpx;
  overflow-y: auto;
  overflow-x: hidden;
}

