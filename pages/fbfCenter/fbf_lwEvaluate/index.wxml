<wux-cell title="满意度：" hover-class="none">
  <wux-rater slot="footer" activeColor="#ff4d4d" default-value="{{ slider }}" margin="{{ 15 }}" icon="ios-heart" bind:change="sliderChange" />
</wux-cell>

<wux-cell-group title="评论">
  <wux-cell hover-class="none">
    <!-- <textarea placeholder="请输入反馈信息" bindinput='fankui' auto-focus /> -->
    <wux-textarea placeholder="请对本次合作进行一个简单评论吧~" bind:change='onEvaluateText' focus rows="5" hasCount maxlength='200'></wux-textarea>
  </wux-cell>
</wux-cell-group>

<wux-white-space />
<wux-white-space />
